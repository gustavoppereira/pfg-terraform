[
  {
    "name": "prometheus",
    "image": "ragazzid/gus:final3",
    "cpu": 1000,
    "memory": 512,
    "portMappings": [
      {
        "containerPort": 9090,
        "hostPort": 9090
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/monitor",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "prometheus"
      }
    },
    "environment": [
      {
        "name": "IAM_ROLE_ARN",
        "value": "${IAM_ROLE_ARN}"
      },
      {
        "name": "TAG_KEY",
        "value": "${TAG_KEY}"
      },
      {
        "name": "TAG_VALUE",
        "value": "${TAG_VALUE}"
      }
    ]
  },
  {
    "name": "grafana",
    "image": "grafana/grafana:latest",
    "cpu": 1000,
    "memory": 512,
    "portMappings": [
      {
        "containerPort": 3000,
        "hostPort": 3000
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/monitor",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "grafana"
      }
    }
  }
]
